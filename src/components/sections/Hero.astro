---
// src/components/sections/Hero.astro
import { SITE_CONFIG } from '../../config/site';
---

<section id="home" class="pt-32 pb-20 bg-gray-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Text Content -->
      <div class="order-2 lg:order-1">
        <h1 class="text-4xl lg:text-5xl font-bold text-violet-400 leading-tight mb-6">
          SEO Content Specialist & Editor
        </h1>
        <p class="text-lg lg:text-xl text-gray-300 leading-relaxed mb-8">
          I help businesses rank higher on Google with expertly crafted SEO content, professional editing, and meticulous proofreading. Transform your content into a powerful ranking tool.
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <a 
            href={SITE_CONFIG.upworkProfile} 
            target="_blank" 
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center px-8 py-4 bg-violet-400 text-white font-semibold rounded-lg hover:bg-violet-500 transition-colors shadow-lg"
          >
            Hire Me on Upwork
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
          </a>
          <a 
            href="#services" 
            class="inline-flex items-center justify-center px-8 py-4 border-2 border-violet-400 text-violet-400 font-semibold rounded-lg hover:bg-violet-500 hover:text-white transition-colors"
          >
            View My Services
          </a>
        </div>
      </div>

      <!-- Headshot Image -->
      <div class="order-1 lg:order-2 flex justify-center">
        <div class="relative">
          <!-- Decorative background elements -->
          <div class="absolute -inset-4 bg-gradient-to-r from-orange-500/20 to-purple-500/20 rounded-full blur-2xl"></div>
          <div class="absolute -inset-2 bg-gradient-to-r from-orange-500/30 to-purple-500/30 rounded-full blur-xl"></div>
          
          <!-- Main headshot -->
          <div class="relative">
            <img 
              src="/headshot.jpg" 
              alt={`${SITE_CONFIG.author.name} - SEO Content Specialist, Editor and Proofreader`}
              class="w-56 h-56 lg:w-80 lg:h-80 object-cover rounded-full border-4 border-gray-700 shadow-2xl"
              width="384"
              height="384"
              loading="eager"
            />
    
          </div>
        </div>
      </div>
    </div>

    <!-- Stats or credentials section below -->
    <div class="mt-16 grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
      <div class="bg-gray-800/50 rounded-lg p-6 border border-gray-700">
        <div class="text-2xl font-bold text-violet-500 mb-2">$100K+</div>
        <div class="text-gray-300 text-sm">Total Earned</div>
      </div>
      <div class="bg-gray-800/50 rounded-lg p-6 border border-gray-700">
        <div class="text-2xl font-bold text-violet-500 mb-2">100%</div>
        <div class="text-gray-300 text-sm">Job Success Score</div>
      </div>
      <div class="bg-gray-800/50 rounded-lg p-6 border border-gray-700">
        <div class="text-2xl font-bold text-violet-500 mb-2">63</div>
        <div class="text-gray-300 text-sm">Successful Jobs</div>
      </div>
      <div class="bg-gray-800/50 rounded-lg p-6 border border-gray-700">
        <div class="text-2xl font-bold text-violet-500 mb-2">3,200+</div>
        <div class="text-gray-300 text-sm">Hours Logged</div>
      </div>
    </div>
  </div>
</section>