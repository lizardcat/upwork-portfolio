---
// src/components/ui/ExperienceItem.astro
export interface Props {
  title: string;
  company: string;
  companyUrl?: string;
  location: string;
  period: string;
  description: string;
  skills: string[];
}

const { title, company, companyUrl, location, period, description, skills } = Astro.props;
---

<div class="relative flex items-start mb-12">
  <div class="absolute left-0 w-8 h-8 bg-violet-500 rounded-full flex items-center justify-center">
    <div class="w-3 h-3 bg-white rounded-full"></div>
  </div>
  <div class="ml-16 bg-gray-800 rounded-lg p-8 border border-gray-700 w-full">
    <div class="flex items-center mb-4">
      <svg class="w-5 h-5 text-gray-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 012 2v6a2 2 0 01-2 2H8a2 2 0 01-2-2V8a2 2 0 012-2V6"></path>
      </svg>
      <h3 class="text-2xl font-bold text-white">{title}</h3>
    </div>
    <div class="flex items-center mb-2">
      <svg class="w-4 h-4 text-gray-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
      </svg>
      {companyUrl ? (
        <a 
          href={companyUrl} 
          target="_blank" 
          rel="noopener noreferrer"
          class="text-blue-400 hover:text-blue-300 transition-colors duration-200 underline decoration-1 underline-offset-2 hover:decoration-2"
        >
          {company}
        </a>
      ) : (
        <span class="text-gray-300">{company}</span>
      )}
    </div>
    <div class="flex items-center mb-2">
      <svg class="w-4 h-4 text-gray-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <span class="text-gray-400">{period}</span>
    </div>
    <div class="flex items-center mb-6">
      <svg class="w-4 h-4 text-gray-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
      </svg>
      <span class="text-gray-400">{location}</span>
    </div>
    <p class="text-gray-300 mb-6 leading-relaxed">{description}</p>
    <div class="flex flex-wrap gap-2">
      {skills.map(skill => (
        <span class="px-3 py-1 bg-gray-700 text-violet-400 text-sm font-medium rounded-full border border-violet-500/30">
          {skill}
        </span>
      ))}
    </div>
  </div>
</div>