---
// src/components/layout/Navigation.astro
import { NAVIGATION_ITEMS, SITE_CONFIG } from '../../config/site';
---

<!-- Navigation -->
<nav class="fixed top-0 w-full bg-gray-800/90 backdrop-blur-sm border-b border-gray-700 z-50">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="flex justify-between items-center py-4">
			<a href="/" class="text-2xl font-bold text-violet-400 hover:text-violet-300 transition-colors">
				{SITE_CONFIG.name}
			</a>
			<div class="hidden md:flex space-x-8">
				{NAVIGATION_ITEMS.map(item => (
					<a href={item.href} class="text-gray-300 hover:text-violet-500 transition-colors">
						{item.name}
					</a>
				))}
			</div>
			<button id="mobile-menu-btn" class="md:hidden p-2 rounded-lg text-gray-300 hover:text-violet-500 hover:bg-gray-700">
				<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
				</svg>
			</button>
		</div>
		
		<!-- Mobile Menu -->
		<div id="mobile-menu" class="hidden md:hidden pb-4">
			<div class="flex flex-col space-y-2">
				{NAVIGATION_ITEMS.map(item => (
					<a href={item.href} class="text-gray-300 hover:text-violet-500 transition-colors py-2 px-4 rounded">
						{item.name}
					</a>
				))}
			</div>
		</div>
	</div>
</nav>